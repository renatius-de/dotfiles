[alias]
    ac = !"git cm --all"
    ad = add --all --
    ba = branch -a --verbose
    bd = branch --verbose --delete
    ca = commit -q --amend --branch --status --verbose
    cf = checkout --quiet --force
    cl = !"git clone --progress --verbose --recurse-submodules"
    cm = commit --branch --status --verbose
    cn = !"git reflog expire --all && git fsck --unreachable --full && git prune && git gc --aggressive --quiet && git repack -Adq && git prune-packed --quiet"
    dt = difftool
    fe = fetch --progress
    fm = !"git fe --all && git fe --all --tags"
    ma = merge --abort
    me = merge --stat --summary
    mm = !"git mf origin/$(git branch-name)"
    mt = mergetool
    pf = !"git ph --force origin $(git branch-name)"
    ph = push --progress --set-upstream
    pl = pull
    pu = !"for i in $(git remote); do git ph ${i} $(git branch-name); done"
    ra = rebase --abort
    rc = rebase --continue
    re = reset
    rh = reset --hard
    ri = rebase --verbose --stat --interactive --rebase-merge --autosquash
    rp = rebase --skip
    rs = reset --soft
    rv = remote --verbose
    sa = stash push
    sc = stash clear
    sl = stash list
    so = stash pop
    st = status

    branch-name = !"git for-each-ref --format='%(refname:short)' $(git symbolic-ref HEAD)"

[branch]
    autoSetupMerge = always
    autoSetupRebase = always

[clean]
    requireForce = true

[color]
    branch = auto
    diff = auto
    grep = auto
    interactive = auto
    push = auto
    remote = auto
    showbranch = auto
    status = auto
    transport = auto

[color "branch"]
    current = green normal bold
    local = yellow normal bold
    plain = white normal bold
    remote = red normal bold

[color "status"]
    added = green normal bold
    updated = green normal bold
    changed = yellow normal bold
    nobranch = red white blink
    untracked = red normal bold

[commit]
    status = true

[core]
    autocrlf = input
    eol = lf
    excludesfile = ~/.git/ignore
    preloadindex = true

[diff]
    context = 8
    ignoreSubmodules = all
    mnemonicprefix = true
    renameLimit = 8
    renames = copy

[fetch]
    output = compact
    prune = true
    pruneTags = true
    recurseSubmodules = true

[grep]
    lineNumber = true
    extendedRegexp = true

[init]
    defaultBranch = main

[interactive]
    singlekey = true

[log]
    abbrevCommit = true
    date = iso
    follow = true
    showRoot = true

[merge]
    log = true
    renameLimit = 8
    renormalize = true
    stat = true
    tool = nvimdiff3

[mergetool]
    keepBackup = false
    writeToTemp = true

[pull]
    ff = only

[push]
    default = matching
    followTags = true
    recurseSubmodules = on-demand

[rebase]
    abbreviateCommands = true
    autoSquash = true
    autoStash = true
    stat = true

[status]
    relativePaths = false
    showStash = true
    showUntrackedFiles = all

[tag]
    sort = version:refname

[user]
    email = info@renatius.de
    name = Ren√© Six
    useConfigOnly = true

[include]
    path = ~/.gitconfig.local
