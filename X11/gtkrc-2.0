binding "my-bindings" {
    bind "Return" { "insert-at-cursor" ("\n") }
    bind "<ctrl>Return" { "message_send" () }
}

widget "*pidgin_conv_entry" binding "my-bindings"

gtk-toolbar-style = GTK_TOOLBAR_ICONS #Only icons

gtk-icon-sizes = "panel-menu=16,16:panel=16,16:gtk-menu=16,16:gtk-large-toolbar=16,16:gtk-small-toolbar=16,16:gtk-button=16,16"

# Sets the font used by all gtk applications.
gtk-font-name = "Droid Sans 9"
